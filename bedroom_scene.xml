<mujoco model="bedroom_scene">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true" autolimits="true"/>

  <option timestep="0.002" gravity="0 0 -9.81" iterations="50" tolerance="1e-10" solver="Newton" jacobian="auto">
    <flag warmstart="enable" energy="enable" contact="enable"/>
  </option>

  <size nconmax="500" njmax="2000" nstack="500000"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global offwidth="1920" offheight="1080"/>
    <quality shadowsize="2048"/>
    <map stiffness="700" shadowscale="0.5"/>
  </visual>

  <asset>
    <!-- 纹理定义 -->
    <texture name="floor_texture" type="2d" builtin="checker" rgb1="0.7 0.6 0.5" rgb2="0.6 0.5 0.4" width="512" height="512"/>
    <texture name="wall_texture" type="2d" builtin="flat" rgb1="0.9 0.9 0.85" width="512" height="512"/>
    <texture name="wood_texture" type="2d" builtin="checker" rgb1="0.4 0.25 0.15" rgb2="0.35 0.2 0.1" width="512" height="512"/>
    <texture name="wood_dark_texture" type="2d" builtin="checker" rgb1="0.3 0.2 0.1" rgb2="0.25 0.15 0.08" width="512" height="512"/>
    <texture name="fabric_texture" type="2d" builtin="flat" rgb1="0.3 0.5 0.7" width="512" height="512"/>
    <texture name="metal_texture" type="2d" builtin="flat" rgb1="0.7 0.7 0.8" width="512" height="512"/>
    <texture name="glass_texture" type="2d" builtin="flat" rgb1="0.8 0.9 1.0" width="256" height="256"/>
    <texture name="carpet_texture" type="2d" builtin="checker" rgb1="0.6 0.3 0.2" rgb2="0.55 0.25 0.15" width="512" height="512"/>
    <texture name="marble_texture" type="2d" builtin="checker" rgb1="0.9 0.9 0.88" rgb2="0.85 0.85 0.83" width="512" height="512"/>

    <!-- 材质定义 - 改进的物理属性 -->
    <material name="floor_mat" texture="floor_texture" texrepeat="8 8" specular="0.4" shininess="0.15" reflectance="0.1"/>
    <material name="wall_mat" texture="wall_texture" specular="0.1" shininess="0.05" reflectance="0.02"/>
    <material name="wood_mat" texture="wood_texture" texrepeat="2 2" specular="0.3" shininess="0.15" reflectance="0.05"/>
    <material name="wood_dark_mat" texture="wood_dark_texture" texrepeat="2 2" specular="0.3" shininess="0.15" reflectance="0.05"/>
    <material name="fabric_mat" texture="fabric_texture" specular="0.05" shininess="0.02" reflectance="0"/>
    <material name="metal_mat" texture="metal_texture" specular="0.9" shininess="0.6" reflectance="0.3"/>
    <material name="glass_mat" texture="glass_texture" specular="0.95" shininess="0.9" reflectance="0.5" rgba="0.7 0.8 0.9 0.4"/>
    <material name="carpet_mat" texture="carpet_texture" texrepeat="4 4" specular="0.02" shininess="0.01" reflectance="0"/>
    <material name="marble_mat" texture="marble_texture" texrepeat="3 3" specular="0.7" shininess="0.4" reflectance="0.2"/>
  </asset>

  <!-- 默认几何体属性 -->
